<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('partials/header') %>
    <title>nuevo producto</title>
</head>

<body>

  <%- include('partials/navigation') %>
    <div class="container p-4">

      <div class="row">

        <div class="col-md-4 mx-auto">

          <form method="POST" target="/new-entry" class="card bg-dark text-light card-body">

            <div class="mb-3">
              <label for="title">producto</label>
              <input name="producto" type="text" class="form-control rounded-0" placeholder="ingrese producto" autofocus
                required>
            </div>

            <div class="mb-3">
              <label for="title">precio</label>
              <input name="precio" type="text" class="form-control rounded-0" placeholder="ingrese sprecio" autofocus required>
            </div>

            <div class="mb-3">
              <label for="title">codigo</label>
              <input name="codigo" type="text" class="form-control rounded-0" placeholder="ingrese codigo" autofocus required>
            </div>

            <div class="mb-3">
              <label for="descripcion">descripcion</label>
              <textarea class="form-control" name="descripcion" rows="2" required></textarea>
            </div>

            <div class="mb-3">
              <input type="submit" value="agregar" class="btn btn-primary">
            </div>
          </form>
        </div>
      </div>

    </div>

    <%- include('partials/footer')%>
</body>

</html>